async function getAIResponse(prompt) {
    let response = await fetch("https://api-inference.huggingface.co/models/mistralai/Mistral-7B-Instruct", {
        method: "POST",
        headers: {
            "Authorization": "Bearer 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",
            "Content-Type": "application/json"
        },
        body: JSON.stringify({ inputs: prompt })
    });
    let data = await response.json();
    return data.generated_text || "Error getting response";
}
